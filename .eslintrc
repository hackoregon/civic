{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "env": {
    "mocha": true
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "jsx-a11y/img-has-alt": 0,
    "prefer-arrow-callback": 0,
    "func-names": 2,
    "react/jsx-filename-extension": 0,
    "react/require-default-props": 0,
    "arrow-body-style": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "packages/**/*.story.js",
          "packages/**/*.test.js"
        ]
      }
    ]
  },
  "globals": {
    "__DEV__": true,
    "window": true,
    "document": true,
    "describe": true,
    "it": true,
    "jest": true,
    "expect": true,
    "beforeEach": true,
    "afterEach": true,
    "before": true,
    "after": true
  }
}